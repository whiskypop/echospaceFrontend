.container {
  position: relative;
  width: 100vw;
  height: 100vh;
  overflow: hidden;
}

.bg-color {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: #000000;
  z-index: -3;
}

.bg-img {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  filter: blur(25px);
  z-index: -1;
  opacity: 0.6;
}

.content {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20px;
  width: 100%;
  height: 100%;
  /* 使用全高度 */
  box-sizing: border-box;
  /* 包括填充和边框在内计算总高度 */
}

.minimize-button {
  position: absolute;
  top: 40px;
  right: 10px;
  width: auto !important;
  background-color: rgba(231, 228, 228, 0.336);
  /* 设置背景透明 */
  border-radius: 15px;
}

.cover {
  width: 150px;
  height: 150px;
  border-radius: 30px;
  margin-bottom: 20px;
}

.title {
  font-size: 22px;
  font-weight: bold;
  color: #fff;
  margin-bottom: 10px;
}

.lyric-scroll {
  flex: 1;
  /* 使用剩余空间 */
  padding: 10px;
  overflow-y: auto;
  /* 允许垂直滚动 */
  width: 100%;
  /* 占满宽度 */
  box-sizing: border-box;
  /* 包括填充和边框在内计算总宽度 */
}

.lyric {
  font-size: 20px;
  display: block;
  /* 将歌词文本元素设置为块级元素 */
  text-align: center;
  /* 设置歌词文本左对齐 */
  color: white;
  line-height: 2;
}

.slider-container {
  width: 100%;
  /* 占满宽度 */
  padding: 20px;
  box-sizing: border-box;
  /* 包括填充和边框在内计算总宽度 */
}

slider {
  width: 100%;
  /* 占满宽度 */
  margin: 0;
}

.time-info {
  width: 100px;
  text-align: center;
  display: inline-block;
  font-size: 28rpx;
  color: #f0eaea;
  margin-top: 25rpx;
}

.play-btn {
  /* position: flex; */
  background: none;
  border: none;
}

.play-icon {
  width: 54px;
  height: 54px;
  margin-top: 20px;
  margin-bottom: 20px;
}