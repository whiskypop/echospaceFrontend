.page-container {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

/* 头部布局 */
.heading {
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 100%;
  padding: 21px;
}

/* 头部组件1 */
.heading-component1 {
  display: flex;
  gap: 10px;
  align-items: center;
}

/* 名称 */
.title {
  font-size: 36px;
  color: white;
  font-weight: bold; /* 加粗文本 */
}

/* 描述 */
.description {
  font-size: 16px;
  color: #B1B1B1;
  line-height: 16px;
  display: flex;
  align-items: center;
  margin-top: 10px;
  font-weight: bold;
}

.toggle-section-button {
    width: 40px;
    height: 40px;
    border-radius: 50%; /* Makes it circular */
    font-size: 20px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-right: 18px;
}
.biggroup, .biggroup2{
  width: 100%;
  display: flex;
  flex-direction: column;
  gap: 40px;
}
.group, .group2{
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: left;
  gap: 10px;
}
.cards-titleall {
  display: flex;
  flex-direction: column;
  
  margin: 0px 21px 0px 21px;
}

.cards-title {
  font-size: 26px;
  line-height: 30px;
  font-weight: bold;
  text-align: left;
  color: white;

 
}
.cards-subTitle16 {
  color: #BABABA;
  font-size: 16px;
