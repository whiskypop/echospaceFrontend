  line-height: 25px;
  
}
/* 组件1 */
.showcard1 {
  display: flex;
  flex-direction: column;
  width: 90vw;
  height: 60vh;
  background-color: #404044;
  margin: 0px 21px 0px 21px;
  border-radius: 16px;
}

/* 子组件1-1 */
.subshowcard1-1 {
  display: flex;
  flex-direction: column; /* 竖直排列内容 */
  width: 100%; /* 确保子组件宽度与父容器一致 */
  height: 387px;
  border-radius: 5%;
  overflow: hidden; /* 防止超出部分显示 */
  position: relative; /* 允许子元素绝对定位 */
}

.gallery {
    position: absolute;
    top: 0px;
    left: -10px;
    width: 110%;
    height: 100%;
    /* object-fit: fill; */
    z-index: 0;
}

/* 新添加的容器 */
.content-container {
  display: flex;
  justify-content: space-between; /* 水平排列 */
  align-items: flex-end; /* 垂直底部对齐 */
  width: 100%;
  height: 100%; /* 使容器填满子组件1-1 */
}

/* 文本容器 */
.text-container {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  justify-content: flex-end;
}

/* 产品名 */
.product-name {
  font-size: 30px;
  color: #FFFFFF;
  font-weight: bold;
  line-height: 44px;
}

/* 动效描述 */
.effect-description {
  font-size: 16px;
  color: #808080;
  font-weight: bold;
}

/* 按钮容器 */
.button-container {
  display: flex;
  justify-content: flex-end; /* 水平方向右对齐 */
  align-items: center; /* 垂直居中 */
  margin-right: 10px; /* 调整右边距，使其靠右 */
  width: 115px;
  height: 37px;
}

/* 应用按钮 */
.apply-button {
  background: linear-gradient(90deg, 
    #E631FF 0%, 
    #AF2CF9 21%, 
    #6726F2 50%, 
    #1A8DF6 73%, 
