.container {
  background-color: black;
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  color: #fff;
}
.heading-component1 {
  display: flex;
  gap: 10px;
  align-items: center;
}

.title {
  font-size: 36px;
  color: white;
  font-weight: bold;
  margin: 15px;
}

/* 描述 */
.description {
  font-size: 16px;
  color: #B1B1B1;
  line-height: 16px;
  display: flex;
  align-items: center;
  margin-top: 10px;
  font-weight: bold;
}

.circle {
  width: 20rpx;
  height: 20rpx;
  border-radius: 50%;
  background-color: #0000ff; /* Blue */
}
.giftsContainer {
    border-radius: 20px;
    background-color: #242323ef;
    width: 99%;
    margin: 0 auto;
    height: 101%;
    padding-bottom: 10px;
    display: flex;
    flex-direction: column;
    padding: 5px 0px;
}
.main-image {
    position: relative;
    text-align: center;
    display: flex;
    width: 90%;
    height: 41vh; /* 或者你需要的高度 */
    margin: 0 auto;

}

.background-video {
    width: 90vw;
    height: 41vh;
    object-fit: cover;
    z-index: 0;
    border-radius: 25px;
    margin: 0 auto;
}


.product-description, .product-name {
  position: absolute;
  bottom: 20rpx;
  left: 20rpx;
  font-size: 30rpx;
}

.apply-button {
  position: absolute;
  bottom: 20rpx;
  right: 20px;
  width: 120px !important;
  background: linear-gradient(90deg, 
    #E631FF 0%, 
    #AF2CF9 21%, 
    #6726F2 50%, 
    #1A8DF6 73%, 
    #32C9FC 100%
  );
  color: #fff;
  padding: 10rpx 20rpx;
  border-radius: 25px;
}
.text-container {
    position: absolute;
    bottom: 20rpx;
    margin-left: 30px;
    display: flex;
    flex-direction: column;
    z-index: 1;
}
.effect-description {
    font-size: 16px;
    color: #808080;
    font-weight: bold;
}
.containerName {
    font-size: 30px;
    color: #FFFFFF;
    font-weight: bold;
    line-height: 44px;
}

.cartGifts {
  display: flex;
  margin-top: 10px;
  margin-left: 10px;
}

.product-video {
    width: 53px;
    height: 53px;
    border-radius: 16px;
    margin: 0 20px;
  }

.special-effect {
    margin-top: 15px;
    display: flex;
    flex-direction: column;
    background-color: #242323ef;
    padding: 10px 0px;
}
.effectName {
    font-size: 30px;
    color: #FFFFFF;
    font-weight: bold;
    line-height: 44px;
    margin-left: 15px;
}
.specialVideos {
    margin-top: 10px;
    margin-left: 10px;
}
.effect-video {
    width: 80px;
    height: 80px;
    border-radius: 16px;
    margin: 0 7px;

}
  .tags-section {
    display: flex;
    /* flex-direction: column; */
    margin-top: 24px;
    background-color: transparent;
    border-radius: 15px;
    padding: 10px;
  }
  
  .tags-scroll-container {
      display: flex;
      height: 35px;
      overflow-x: scroll;
      /* width: 98%; */
      margin: 10px 21px 0px 21px;
      white-space: nowrap; /* 不换行 */
      overflow: hidden;
  }
  
  .tag {
      display: inline-block;
      background-color: #444;
      color: white;
      border: none;
      border-radius: 10px;
      font-size: 14px;
      cursor: pointer;
      white-space: nowrap;
      width: 94px !important;
      height: 35px;
      line-height: 35px;
      text-align: center;
      padding: 0px 6px;
      margin-right: 10px !important;
  }
  .tag.selected {
    background-color: #6726F2;
  }


.cart-info {
    position: fixed;
    bottom: 0;
    height: 79px;
  
    width: 100%;
    background-color: #1B1C1F;
    padding: 18px 21px;
    display: flex;
    
    align-items: center;
    color: white;
    
  }
  
  .money-detail {
    display: flex;
    flex-direction: column;
    width: 100%; /* 设置宽度为100% */
    margin-right: 10px;
    align-items: flex-end; /* 垂直居中对齐 */
    justify-content: flex-end; /* 水平靠右对齐 */
    gap: 1px;
  }
  
  
  .button-container {
    display: flex;
    justify-content: flex-end;
    align-items: flex-end;
    margin-right: 10px;
    width: 115px;
    height: 37px;
  }
  
  .create-button {
    background: linear-gradient(90deg, 
    #E631FF 0%, 
    #AF2CF9 21%, 
    #6726F2 50%, 
    #1A8DF6 73%, 
    #32C9FC 100%
  );
  color: white;
  border: none;
  border-radius: 25px;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 115px !important;
  font-size: 16px;
  font-weight: bold;
  padding: 0;
  box-sizing: border-box;
  height: 37px;
}

.cards-subTitledetail {
    color: #BABABA;
    font-size: 12px;
    text-align: left;
    line-height: 18px;
  }
