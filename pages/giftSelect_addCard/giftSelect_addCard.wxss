.cart-info {
	position: fixed;
	bottom: 0;
	height: 79px;
	width: 100%;
	background-color: #1B1C1F;
	padding: 18px 0px;
	display: flex;
	margin-left: -20px;
	align-items: center;
	color: white;
	z-index: 10;
}

.money-detail {
	display: flex;
	flex-direction: column;
	width: 100%;
	/* 设置宽度为100% */
	margin-right: 10px;
	align-items: flex-end;
	/* 垂直居中对齐 */
	justify-content: flex-end;
	/* 水平靠右对齐 */
	gap: 1px;
}

.cards-subTitledetail {
	color: #BABABA;
	font-size: 12px;
	text-align: left;
	line-height: 18px;
}

.button-container {
	display: flex;
	justify-content: flex-end;
	align-items: flex-end;
	margin-right: 10px;
	width: 115px;
	height: 37px;
}

.create-button {
	background: linear-gradient(90deg,
			#E631FF 0%,
			#AF2CF9 21%,
			#6726F2 50%,
			#1A8DF6 73%,
			#32C9FC 100%);
	color: white;
	border: none;
	border-radius: 25px;
	text-align: center;
	display: flex;
	justify-content: center;
	align-items: center;
	width: 115px !important;
	font-size: 16px;
	font-weight: bold;
	padding: 0;
	box-sizing: border-box;
	height: 37px;
}

.product-info-wrapper {
	display: flex;
	flex-direction: row;
}

.product-info-wrapper strong {
	font-size: 14px;
	width: 7%;
}