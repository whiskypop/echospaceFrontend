/* Global Styles */
.container {
	background-color: #000;
	color: #fff;
	padding: 20px;
	position: relative;
}

/* 头部布局 */
.heading {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	padding: 2.1vh 0vw;
	/* 21px */
}

/* 头部组件1 */
.heading-component1 {
	display: flex;
	gap: 3vw;
	align-items: center;
}

/* 名称 */
.title {
	font-size: 36px;
	color: white;
	font-weight: bold;
	/* 加粗文本 */
}

/* 描述 */
.description {
	font-size: 16px;
	color: #B1B1B1;
	line-height: 16px;
	display: flex;
	align-items: center;
	margin-top: 10px;
	font-weight: bold;
}

.icon {
	width: 50rpx;
	height: 50rpx;
	background: radial-gradient(circle, #6d3ef3, #000);
	border-radius: 50%;
	/* margin-top: 5rpx; */
	position: relative;
	top: -31rpx;
	left: 46rpx;
	align-self: flex-end;
}

.step1-wrapper,
.step2-wrapper {
	position: relative;
}

/* 蒙层效果 */
.overlay {
	position: absolute;
	top: 0;
	left: 0;
	width: 100%;
	height: 100%;
	background: rgba(0, 0, 0, 0.7);
	/* 半透明黑色蒙层 */
	z-index: 10;
}

/* Step 1 */
.step1-header {
	display: flex;
	justify-content: space-between;
	align-items: center;
	margin-bottom: 20px;
}

.step-title {
	font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	font-size: 20px;
	font-weight: bold;
}

.more-btn {
	background-color: transparent;
	color: #e9e9e9a2;
	border: none;
	font-size: 16px;
}


.gift-selection {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}

.scroll-container {
	display: flex;
	flex-direction: row;
	overflow-x: scroll;
	white-space: nowrap;
}

.product-item {
	width: 150px;
	margin-right: 10px;
	margin-bottom: 20px;
	background-color: rgba(73, 72, 72, 0.623);
	border-radius: 12px;
	position: relative;
	overflow: hidden;
	display: inline-block;
}

.product-video {
	width: 150px;
	height: 150px;
	border-radius: 12px;
}

.product-info {
	/* padding: 0px 10px; */
	width: auto;
	height: 45px;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
	flex: 1;
	font-size: 10px;
	transition: font-size 0.3s ease-in-out;
	/* 添加过渡动画 */
}

.product-name {
	color: #fff;
	/* font-size: 10px; */
	font-weight: bold;
}

.product-price {
	color: rgba(255, 255, 255, 0.473);
	/* font-size: 10px; */
}

.bigger-fontsize {
	font-size: 14px;
}

.quantity-button {
	padding: 0;
	width: 18px !important;
	flex-shrink: 0;
	height: 20px;
	line-height: 20px;
	background-color: #ECECEC;
	color: #382286a1;
	border: none;
	border-radius: 50%;

	/* display: flex;
	flex-grow: 0;
	flex-shrink: 0;
	align-items: center;
	justify-content: center; */
	margin-right: 2px !important;
	margin-bottom: 16px;
	cursor: pointer;
	white-space: nowrap;
}

.quantity-button.added {
	background-color: #8d27a1;
	color: white;
}

.notDisplay {
	display: none;
}

/* Step 2 */
.card-selection {
	display: flex;
	flex-wrap: wrap;
	justify-content: space-between;
}

.card-item {
	width: 100%;
	margin-bottom: 20px;
	background-color: #333;
	padding: 10px;
	border-radius: 8px;
	text-align: center;
	display: flex;
	flex-direction: row;
}

.showcard2 {
	width: 41vw;
	margin-right: 10px;
	background-color: #fdd6f0;
	color: white;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	align-items: center;
	border-radius: 16px;
}

.showcardPhoto {
	width: 41vw;
	margin-right: 10px;
	background-color: #98c8e7;
	color: white;
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	align-items: center;
	border-radius: 16px;
}

.subshowcard2-1 {
	display: flex;
	justify-content: space-between;
	align-items: flex-end;
	width: 100%;
}

.subshowcard2-2 {
	overflow: hidden;
	width: 41vw;
	height: 17vh;
	display: flex;
	flex-direction: column;
	margin-bottom: -17px;
	flex-shrink: 0;
	margin-top: 40px;
}

.text-container {
	display: flex;
	flex-direction: column;
	justify-content: flex-end;
	/* 保证文本容器内的内容向下对齐 */
	align-items: flex-start;
	padding: 18px 10px;
	z-index: 9;
}

.subshowcard2-2-1 {
	margin-left: 0px;
	gap: 5px;
	animation: scroll-left-right 10s linear infinite;
}

.subshowcard2-2-2 {
	padding-left: 20px;
	gap: 5px;
	animation: scroll-left-right 10s linear infinite;
}

@keyframes scroll-left {
	from {
		transform: translateX(0);
	}

	to {
		transform: translateX(-100%);
	}
}

.square-image {
	height: 53px;
	border-radius: 16px;
	flex: 0 0 53px;
	display: inline-block;
}

/* 动效描述 */
.effect-description {
	font-size: 10px;
	color: #808080;
	font-weight: bold;
}

.containerName {
	font-size: 27px;
	color: #fd167663;
	font-weight: bold;
	line-height: 30px;
}

.photoCardName {
	font-size: 27px;
	color: #5568d4f3;
	font-weight: bold;
	line-height: 30px;
}

