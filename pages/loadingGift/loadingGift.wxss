/* 头部布局 */
.heading {
	display: flex;
	justify-content: space-between;
	align-items: center;
	width: 100%;
	padding: 21px;
}

/* 头部组件1 */
.heading-component1 {
	display: flex;
	gap: 10px;
	align-items: center;
}

/* 名称 */
.title {
	font-size: 36px;
	color: white;
	font-weight: bold;
	/* 加粗文本 */
}

/* 描述 */
.description {
	font-size: 16px;
	color: #B1B1B1;
	line-height: 16px;
	display: flex;
	align-items: center;
	margin-top: 10px;
	font-weight: bold;
}

.video-container {
	display: flex;
	justify-content: center;
	/* 居中对齐 */
	align-items: center;
	/* 垂直居中 */
	width: 100%;
	height: 50vh;
	/* 填满整个视口高度 */
	position: relative;
	/* 相对定位，方便子元素定位 */
}

.circular-video {
	width: 200px;
	/* 你想要的视频宽度 */
	height: 200px;
	/* 你想要的视频高度 */
	border-radius: 50%;
	/* 圆形裁剪 */
	overflow: hidden;
	/* 隐藏溢出部分 */
	border: 5px solid #202020be;
	/* 边框颜色和宽度 */
	box-shadow: 0 0 10px rgba(0, 0, 0, 0.5);
	/* 可选的阴影效果 */
}

.text-container {
	text-align: center;
	/* 文本居中 */
	margin-top: -80px;
	/* 视频和文本之间的间距 */
}

.text-line {
	font-size: 20px;
	font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
	font-weight: bold;
	display: block;
	/* 文本大小 */
	color: #ffffffc2;
	/* 文本颜色 */
}

.text-line-zh {
	font-size: 15px;
	display: block;
	/* 文本大小 */
	color: #ffffff6c;
}