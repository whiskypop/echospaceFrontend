.container {
  position: relative;
  width: 100%;
  height: 100vh;
  overflow: hidden;
}

.full-screen-image {
  width: 100%;
  height: 105%;
  object-fit: cover;
  z-index: 0;
}

.navigate-button {
  position: absolute;
  bottom: 685px;
  left: 70%;
  transform: translateX(-50%);
  background-color: rgba(0, 0, 0, 0);
  color: white;
  border: none;
  padding: 10px 20px;
  border-radius: 5px;
  font-size: 16px;
}

.shareButton {
  position: absolute;
  /* 使元素绝对定位 */
  top: 13vh;
  /* 顶部对齐 */
  left: 20vw;
  /* 左侧对齐 */
  width: 65%;
  /* 宽度占满整个容器 */
  height: 35%;
  /* 高度占满整个容器 */
  z-index: 10;
  /* 确保在最上层 */
  background-color: transparent;
  /* 半透明背景（可根据需要调整） */
}